@model IEnumerable<OnlineMovieBooking.ViewModels.ShowSeatViewModel>

@{
    ViewBag.Title = "SelectSeatByShow";
    Layout = "~/Views/Shared/_MovieLayout.cshtml";
}


<h2>SelectSeatByShow</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShowSeatId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowId)
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowSeatId)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Status, new { @class = "ShowSeatViewModel", disabled = item.Status })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowId)
            </td>
            <td>
                @Html.ActionLink("Select", "SelectSeat", new { id = item.ShowSeatId })
            </td>

        </tr>
    }

</table>

