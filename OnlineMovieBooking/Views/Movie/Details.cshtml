@model OnlineMovieBooking.ViewModels.MovieViewModel
@{
    ViewBag.Title = "MovieInfo";
    Layout = "~/Views/Shared/_MovieLayout.cshtml";
}
<h2>Details</h2>



<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<style>
    body {
        background-color: cadetblue;
    }

    .row {
        display: flex;
    }

    .column {
        float: left;
        width: 33.3%;
    }

    .column1 {
        text-align: center;
    }

    .column2 {
        width: 20%;
        align-items: center;
        text-align: center;
        justify-content: center;
    }

    .column3 {
        width: 50%;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .img1 {
        width: 350px;
        height: 300px;
        border: 2px solid blue;
    }

    th {
        padding: 30px 100px 10px;
    }

    td {
        padding: 10px 100px 10px;
    }

    .button-book {
        margin-top: 50px;
        padding: 15px;
        background-color: crimson;
        border-radius: 5px;
        border: none;
        color: white;
    }

    .abt-div {
        margin-top: 30px;
        margin-bottom: 10px;
        border-top: 2px solid blue;
        padding: 5px;
    }

    .abt-div1 {
        margin-top: 30px;
        margin-bottom: 50px;
        border-top: 2px solid blue;
        padding: 5px;
    }

    .fdbk-cntr {
        text-align: center;
        margin-bottom: 20px;
    }

    .input1 {
        margin-left: 300px;
        padding: 25px 20px 25px;
        border: 2px solid black;
        outline: none;
        border-radius: 5px;
        text-align: left;
        font-size: 16px;
        background-color: cadetblue;
        color: black;
    }

    .movie-watched {
        margin-top: -10px;
    }

    .input2 {
        background-color: cadetblue;
        border: 2px solid black;
    }
</style>
<
    <div class="row">
        <div class="column">
    

            <img src= @ViewBag.address />
        </div>
        <div class="column1">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
            <table>
                <tr>
                    <th>Language</th>
                    <th>@Html.DisplayNameFor(model => model.Genre)</th>
                    <th><h4>Release Date</h4></th>
                    <th><h4>Duration</h4></th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Language)</td>
                    <td>@Html.DisplayFor(model => model.Genre)</td>
                    <td><p>@Html.DisplayFor(model => model.ReleaseDate)</p></td>
                    <td><p>@Html.DisplayFor(model => model.Duration)</p></td>
                </tr>
            </table>
            <div class="column1">
                <button class="button-book">Book Now</button>
            </div>
        </div>
    </div>

    <div class="abt-div">
        <h2>About Movie</h2>
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
    </div>
    <div class="abt-div">
        <h2>Cast</h2>
        <div class="row">
            <div class="column2">
                <p>
                    <img src="~/movieinfo/cast/cast1.png" />
