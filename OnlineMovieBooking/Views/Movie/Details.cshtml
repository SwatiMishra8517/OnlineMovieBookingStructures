                <p>
                    <img src="~/movieinfo/cast/cast2.png" />
                </p>
            </div>
            <div class="column2">
                <p>

                    <img src="~/movieinfo/cast/cast3.png" />
                </p>
            </div>
            <div class="column2">
                <p>
                    <img src="~/movieinfo/cast/cast4.png" />
                </p>
            </div>
            <div class="column2"><p>Cast 5</p></div>
        </div>
    </div>
    <div class="abt-div">
        <h2>Crew</h2>
        <div class="row">
            <div class="column2">
                <p>
                    <img src="~/movieinfo/crew/crew1.png" />
                </p>
            </div>
            <div class="column2">
                <p>
                    <img src="~/movieinfo/crew/crew2.png" />
                </p>
            </div>
            <div class="column2">
                <p>
                    <img src="~/movieinfo/crew/crew3.png" />
                </p>
            </div>
            <div class="column2">
                <p>
                    <img src="~/movieinfo/crew/crew4.png" />
                </p>
            </div>
            <div class="column2"><p></p></div>
        </div>
    </div>

    <div class="abt-div1">
        <h2 class="fdbk-cntr">Feedback</h2>




        <div class="row">
            <div class="column3">

                <div class="row">
                    <div class="column3"><p class="movie-watched">Movie watched</p></div>
                    <div class="column3"><input type="checkbox" name="" id="" class="input2"></div>
                </div>


                <div class="row">
                    <div class="column3"><p>Ratings</p></div>
                    <div class="column3"><p>&#9734;&#9734;&#9734;&#9734;&#9734;</p></div>
                </div>


            </div>
            <div class="colunm3">
                <input type="text" class="input1" value="Enter your feedback here">
            </div>
        </div>

        <p>

            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
